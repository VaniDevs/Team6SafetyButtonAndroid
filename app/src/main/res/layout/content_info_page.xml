<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vanhacks_index5.safetybutton.InfoPage"
    tools:showIn="@layout/activity_info_page">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="20"
        android:stretchColumns="*"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill in"
            android:textSize="20sp"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:id="@+id/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/name"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:layout_gravity="end"
        android:layout_row="1"
        android:layout_column="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address:"
            android:id="@+id/homeAddress"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeAddressEdit"
            android:layout_gravity="end"
            android:layout_row="2"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Address:"
            android:id="@+id/workAddress"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/workAddressEdit"
            android:layout_gravity="end"
            android:layout_row="3"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner's Home Address:"
            android:id="@+id/partnerHomeAddress"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/partnerHomeAddressEdit"
            android:layout_gravity="end"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner's Work Address:"
            android:id="@+id/partnerWorkAddress"
            android:layout_row="5"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/partnerWorkAddressEdit"
            android:layout_gravity="end"
            android:layout_row="5"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner:"
            android:id="@+id/partner"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/partnerEdit"
            android:layout_gravity="end"
            android:layout_row="6"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children Names:"
            android:id="@+id/children"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/childrenEdit"
            android:layout_gravity="end"
            android:layout_row="7"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal Orders:"
            android:id="@+id/legal"
            android:layout_row="8"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/legalEdit"
            android:layout_gravity="end"
            android:layout_row="8"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threats?:"
            android:id="@+id/threats"
            android:layout_row="9"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/threatsEdit"
            android:layout_gravity="end"
            android:layout_row="9"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapons available:"
            android:id="@+id/weapons"
            android:layout_row="10"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/weaponsEdit"
            android:layout_gravity="end"
            android:layout_row="10"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Plate #:"
            android:id="@+id/plate"
            android:layout_row="11"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/plateEdit"
            android:layout_gravity="end"
            android:layout_row="11"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner's Plate #:"
            android:id="@+id/partnerPlate"
            android:layout_row="12"
            android:layout_column="0" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/partnerPlateEdit"
            android:layout_gravity="end"
            android:layout_row="12"
            android:layout_column="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:id="@+id/comment"
            android:layout_row="13"
            android:layout_column="0" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/commentEdit"
            android:layout_gravity="end"
            android:layout_row="13"
            android:layout_column="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0066ff"
            android:onClick="onClick"
            android:text="Enter"
            android:id="@+id/infoButton"
            android:layout_gravity="end"
            android:layout_row="14"
            android:layout_column="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0066ff"
            android:text="Cancel"
            android:onClick="onClick"
            android:id="@+id/cancel"
            android:layout_row="14"
            android:layout_column="0" />
    </GridLayout>
</ScrollView>
